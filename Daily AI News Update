name: Daily AI News Update

on:
  schedule:
    - cron: '0 1 * * *'  # UTC 1:00 = 北京时间 9:00
  workflow_dispatch:

permissions:
  contents: write
  pages: write
  id-token: write

jobs:
  update-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Get current date
        id: date
        run: echo "date=$(date +'%Y-%m-%d')" >> $GITHUB_OUTPUT
      - name: Archive current news
        run: |
          if [ -f index.html ]; then
            cp index.html ai-news-${{ steps.date.outputs.date }}.html
          fi          
      - name: Commit changes
        run: |
          git config --local user.email "github-actions[bot]@users.noreply.github.com"
          git config --local user.name "github-actions[bot]"
          git add .
          git commit -m "Update AI News for ${{ steps.date.outputs.date }}" || echo "No changes"
          git push          
